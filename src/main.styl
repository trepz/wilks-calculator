body
  font-family 'Roboto', sans-serif
  background #f8f8f8

.header
  background linear-gradient(315deg, #eec0c6 0%, #e58c8a 74%)
  color #fff
  font-size 20px
  position relative
  height 30vh
  display flex
  flex-direction columns
  align-items center
  justify-content center
  &::before
    content ''
    position absolute
    bottom 0
    width 0
    height 0
    border-style solid
    border-width 0 33px 33px 33px
    border-color transparent transparent #f8f8f8 transparent
    left 50%
    transform translateX(-50%)

.score
  font-size 75px
  text-align center

.formula
  text-align center
