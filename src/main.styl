// VARS


offwhite = #f8f8f8
primary = #e58c8a
secondary = #eec0c6


// FUNCTIONS


inputAppearance()
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  -o-appearance none
  appearance none


// COMPONENTS


body
  font-family 'Roboto', sans-serif
  background offwhite

.header
  background linear-gradient(315deg, secondary 0%, primary 74%)
  color #fff
  font-size 20px
  position relative
  height 25vh
  display flex
  flex-direction columns
  align-items center
  justify-content center
  padding-bottom 35px
  &__score
    font-size 75px
    text-align center
  &__formula
    text-align center

.section
  margin 5px 10px
  z-index 99
  padding 20px

.wave
  position absolute
  bottom -2px
  height 52px
  width 100%
  &__container
    position relative
    height 0
    width 100%
    padding-bottom 56.25%
  svg 
    display block
    position absolute
    width 100%
    height 100%
    fill offwhite
    fill-opacity 1
    path
      vector-effect non-scaling-stroke

.input
  margin 40px 5px
  width 100%
  max-width 400px
  position relative
  &__field
    inputAppearance()
    padding 5px
    background none
    border-radius 0
    width 100%
    color #333
    border none
    border-bottom 1px solid #999
    &:focus
      outline none
      border-bottom 1px solid primary
      & + .placeholder
        bottom 30px
        font-size 12px
        color primary
  .placeholder
    position absolute
    bottom 5px
    left 5px
    color #999
    transition all 200ms
    &--filled
      bottom 30px
      font-size 12px

.checkbox
  cursor pointer
  color #999
  font-size 20px
  padding 10px 10px 3px 10px
  margin-bottom 7px
  &--checked
    color primary
    border-bottom 1px solid primary

.checkbox-container
  display flex
  flex-direction row
  >.checkbox-container
    flex 0.5
  &--right
    justify-content flex-end 