offwhite = #f8f8f8

body
  font-family 'Roboto', sans-serif
  background offwhite

.header
  background linear-gradient(315deg, #eec0c6 0%, #e58c8a 74%)
  color #fff
  font-size 20px
  position relative
  height 30vh
  display flex
  flex-direction columns
  align-items center
  justify-content center

  &__score
    font-size 75px
    text-align center

  &__formula
    text-align center

.section
  margin-top 100px

.wave
  position absolute
  bottom -2px
  height 52px
  width 100%
  &__container
    position relative
    height 0
    width 100%
    padding-bottom 56.25%
  svg 
    display block
    position absolute
    width 100%
    height 100%
    fill offwhite
    fill-opacity 1
    path
      vector-effect non-scaling-stroke
