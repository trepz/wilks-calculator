// VARS


offwhite = #f8f8f8
primary = #e58c8a
secondary = #eec0c6


// FUNCTIONS


inputAppearance()
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  -o-appearance none
  appearance none


// COMPONENTS


body
  font-family 'Roboto', sans-serif
  background offwhite

.header
  background linear-gradient(315deg, secondary 0%, primary 74%)
  color #fff
  font-size 20px
  position relative
  height 25vh
  display flex
  flex-direction columns
  align-items center
  justify-content center
  padding-bottom 35px

  &__score
    font-size 75px
    text-align center

  &__formula
    text-align center

.section
  margin 5px 10px
  z-index 99
  padding 20px

.wave
  position absolute
  bottom -2px
  height 52px
  width 100%
  &__container
    position relative
    height 0
    width 100%
    padding-bottom 56.25%
  svg 
    display block
    position absolute
    width 100%
    height 100%
    fill offwhite
    fill-opacity 1
    path
      vector-effect non-scaling-stroke

.input
  margin 40px 5px
  width 100%
  max-width 400px
  &__field
    background none
    border-radius 0
    width 100%
    inputAppearance()
    border none
    border-bottom 1px solid secondary
    &:focus
      outline none
      border-bottom 1px solid primary